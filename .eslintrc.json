{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "plugins": [
        "react"
    ],
    "parser": "typescript-eslint-parser",
    "parserOptions": {
        "ecmaVersion": 2018,
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },
    "rules": {
        "no-cond-assign": [1],
        "indent": [2, 4],
        "linebreak-style": ["error", "unix"],
        "quotes": [1, "single"],
        "semi": ["error", "never"],
        "no-undef": [0],
        "no-console": [0],
        "no-unused-vars": [1, {
            "vars": "all",
            "args": "all"
        }]
    }
}
