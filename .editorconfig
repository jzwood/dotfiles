# EditorConfig http://editorconfig.org
# see http://editorconfig.org/#download for plugins for your editor

root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.py]
indent_style = space
indent_size = 4

[**.js]
bin=node
indent_style = space
indent_size = 2

[**.ts]
indent_style = space
indent_size = 4

[**.css]
indent_style = space
indent_size = 2

[**.html]
;vim:max_char=78:brace_style=expand
indent_style = space
indent_size = 2

[**.pug]
indent_style = space
indent_size = 4

[**.json]
indent_style = space
indent_size = 2

[**.md]
indent_style = space
indent_size = 2

# ignore third party
[node_modules/**.js]
indent_size = N/A
indent_style = N/A
